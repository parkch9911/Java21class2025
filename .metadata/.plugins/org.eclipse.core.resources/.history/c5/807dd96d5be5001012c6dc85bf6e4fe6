package ifexample;

import java.util.Scanner;

public class IfEx05 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int isLogin = 0, id = 11111,pw = 1234,cash = 20000,account = 30000, service = 0;
		System.out.println("===MEGA ATM===");
		System.out.println("1.로그인 2.종료");
		isLogin = scan.nextInt();
		if(isLogin == 2) {
			System.out.println("ATM 서비스가 종료됩니다.");
		}else {
			System.out.println("계좌번호 입력 후 비밀번호를 입력해주세요.");
			id = scan.nextInt();
			pw = scan.nextInt();
			if(id == 11111 && pw == 1234) {
				System.out.println("이용하실 서비스를 선택해주세요.");
				System.out.println("1.입금 2.출금 3.잔액조회");
				
			}
			
		}
		
		
		
	}

}
